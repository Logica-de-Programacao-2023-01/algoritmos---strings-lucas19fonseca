package main

import (
	"fmt"
	"strings"
)

func main() {

	var str, cha, cha2 string

	fmt.Print("Insira uma string: ")
	fmt.Scanln(&str)
	fmt.Print("Insira o caractere que deseja alterar: ")
	fmt.Scanln(&cha)
	fmt.Print("Insira o caractere que deseja colocar no lugar desse: ")
	fmt.Scanln(&cha2)

	to replace := strings.Replace(str, cha, cha2, -1)

	fmt.Printf("%s fica %s", str, to replace)

}
